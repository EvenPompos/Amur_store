<Window x:Class="Amur_store.EmployeeSignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Amur Store - Служебный вход" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">

    <Grid x:Name="SignInGrid">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF0F172A" Offset="0"/>
                <GradientStop Color="#FF1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Height="420" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#100E17" Opacity="0.5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Width="350" Margin="20,0">
                <Image Source="/Resources/Themes/logo_blue.png" Width="200" Height="200" Stretch="Uniform"/>
                <TextBlock Text="AMUR STAFF" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                <TextBlock Text="Служебный доступ" Foreground="#64748B" FontSize="16" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Width="350" Margin="0,0, 100, 0">
                <StackPanel Margin="20" Background="#1E293B">
                    <TextBlock Text="АВТОРИЗАЦИЯ" Margin="0,0,0,25" Foreground="White" TextAlignment="Center" FontSize="24" FontWeight="SemiBold"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="AccountTie" Width="22" Height="22" Foreground="#3B82F6" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtLogin" Margin="10,0" materialDesign:HintAssist.Hint="Служебный логин" Foreground="White" Width="250"
                                 BorderBrush="#475569" CaretBrush="#3B82F6" Background="Transparent"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#3B82F6"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                        <materialDesign:PackIcon Kind="Lock" Width="22" Height="22" Foreground="#3B82F6" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtPassword" Margin="10,0" materialDesign:HintAssist.Hint="Пароль" Foreground="White" Width="250"
                                     BorderBrush="#475569" CaretBrush="#3B82F6" Background="Transparent"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#3B82F6"/>
                    </StackPanel>

                    <Button Content="ВОЙТИ В СИСТЕМУ" Click="butLogin_Click" Height="45" Width="280"
                            Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="8"
                            Background="#3B82F6" BorderBrush="#3B82F6" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Button Content="Вернуться к клиенту" Click="butBack_Click" Height="35" Width="280"
                            Style="{StaticResource MaterialDesignOutlinedButton}" materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#475569" Foreground="#94A3B8" Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>