<Window x:Class="Amur_store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Amur Store - Магазин электроники" 
        Height="600" 
        Width="1050"
        WindowStartupLocation="CenterScreen"  
        WindowStyle="None"
        AllowsTransparency="True"
        SizeChanged="Window_SizeChanged"
        WindowState="Maximized">

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <Grid Background="#1E3A8A">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Логотип и заголовок -->
            <StackPanel Grid.Row="0" Margin="10,20,10,10">
                <TextBlock Text="AMUR" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="STORE" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#0EA5E9" 
                           HorizontalAlignment="Center"
                           Margin="0,-5,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        Background="#101828">

                <!-- Кнопка главной страницы -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <Button x:Name="butHome" 
                            Click="butHome_Click"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Width="50" 
                            Height="50"
                            ToolTip="Главная">
                        <materialDesign:PackIcon Kind="Home" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="White"/>
                    </Button>
                    <TextBlock x:Name="SidebarHomeText" 
                               Text="Главная" 
                               Margin="10,0,0,0" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               FontSize="14"/>
                </StackPanel>

                <!-- Кнопка профиля -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <Button x:Name="butAccount" 
                            Click="butAccount_Click"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Width="50" 
                            Height="50"
                            ToolTip="Профиль">
                        <materialDesign:PackIcon Kind="Account" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="White"/>
                    </Button>
                    <TextBlock x:Name="SidebarProfileText" 
                               Text="Профиль" 
                               Margin="10,0,0,0" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               FontSize="14"/>
                </StackPanel>

                <!-- Кнопка каталога товаров -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <Button x:Name="butCatalog" 
                            Click="butCatalog_Click"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Width="50" 
                            Height="50"
                            ToolTip="Каталог товаров">
                        <materialDesign:PackIcon Kind="ViewList" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="White"/>
                    </Button>
                    <TextBlock x:Name="SidebarCatalogText" 
                               Text="Каталог" 
                               Margin="10,0,0,0" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               FontSize="14"/>
                </StackPanel>

                <!-- Кнопка корзины -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <Button x:Name="butBasket" 
                            Click="butBasket_Click"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Width="50" 
                            Height="50"
                            ToolTip="Корзина">
                        <materialDesign:PackIcon Kind="Basket" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="White"/>
                    </Button>
                    <TextBlock x:Name="SidebarBasketText" 
                               Text="Корзина" 
                               Margin="10,0,0,0" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               FontSize="14"/>
                </StackPanel>

                <!-- Кнопка заказов -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                    <Button x:Name="butOrders" 
                            Click="butOrders_Click"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Width="50" 
                            Height="50"
                            ToolTip="Мои заказы">
                        <materialDesign:PackIcon Kind="ClipboardList" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="White"/>
                    </Button>
                    <TextBlock x:Name="SidebarOrdersText" 
                               Text="Заказы" 
                               Margin="10,0,0,0" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               FontSize="14"/>
                </StackPanel>

                <!-- Кнопка выхода -->
                <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Bottom">
                    <Button x:Name="butPowerOff" 
                            Click="butPowerOff_Click"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Width="50" 
                            Height="50"
                            ToolTip="Выйти из системы">
                        <materialDesign:PackIcon Kind="Power" 
                                                 Width="25" 
                                                 Height="25" 
                                                 Foreground="#FF6B7280"/>
                    </Button>
                    <TextBlock x:Name="SidebarPowerOffText" 
                               Text="Выход" 
                               Margin="10,0,0,0" 
                               Foreground="#FF6B7280" 
                               VerticalAlignment="Center" 
                               FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Правая часть с контентом -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Верхняя панель с поиском -->
                <RowDefinition Height="*" />
                <!-- Основной контент -->
            </Grid.RowDefinitions>

            <!-- Верхняя панель с поиском -->
            <Border Grid.Row="0" 
                    Background="#F8FAFC" 
                    Padding="20,10"
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Поисковая строка -->
                    <Border Grid.Column="0"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="500">
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    Margin="10,0">
                            <materialDesign:PackIcon Kind="Magnify" 
                                                     Width="20" 
                                                     Height="20" 
                                                     Foreground="#6B7280"
                                                     VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSearch"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     Padding="10,8"
                                     materialDesign:HintAssist.Hint="Поиск товаров..."
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     Width="440"
                                     KeyDown="txtSearch_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
                                        <Setter Property="Foreground" Value="#1F2937" />
                                        <Setter Property="CaretBrush" Value="#0EA5E9" />
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Кнопки пользователя -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button x:Name="btnUserProfile"
                                Style="{StaticResource MaterialDesignToolButton}"
                                Click="btnUserProfile_Click">
                            <materialDesign:PackIcon Kind="AccountCircle" 
                                                     Width="28" 
                                                     Height="28" 
                                                     Foreground="#1E3A8A"/>
                        </Button>
                        
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <Frame x:Name="MainContent" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"
                   Background="#F9FAFB"/>
        </Grid>
    </Grid>
</Window>