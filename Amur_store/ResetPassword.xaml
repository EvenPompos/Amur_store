<Window x:Class="Amur_store.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Amur Store - Восстановление пароля" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">

    <Grid x:Name="ResetPasswordGrid">
        <!-- Основной фон с градиентом -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF1E3A8A" Offset="0"/>
                <GradientStop Color="#FF0EA5E9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Верхняя декоративная панель -->
        <Border Height="420" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#100E17"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Левая панель с изображением -->
            <StackPanel Width="300" Margin="20,0">
                <Image Source="/Resources/Themes/logo_blue.png" Width="280" Height="280"
                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Stretch="Uniform"/>
                <TextBlock Text="Забыли пароль?" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
                <TextBlock Text="Мы поможем его восстановить" 
                           Foreground="#A0D1FF" 
                           FontSize="14"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Правая панель с формой восстановления -->
            <StackPanel Width="400" Margin="10 0 80 0">
                <StackPanel Margin="20" Background="#101828" >
                    <TextBlock Text="ВОССТАНОВЛЕНИЕ ПАРОЛЯ" 
                               Margin="0,0,0,25" 
                               Foreground="White" 
                               TextAlignment="Center" 
                               FontSize="26" 
                               FontWeight="SemiBold"/>

                    <!-- Поле для логина/email -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="AccountQuestion" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtLogin"
                                 Margin="10,0" 
                                 materialDesign:HintAssist.Hint="Введите логин или email"
                                 Foreground="White" 
                                 Width="300" 
                                 BorderBrush="#2D3748"
                                 CaretBrush="#0EA5E9"
                                 Background="Transparent"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    </StackPanel>

                    <!-- Новый пароль -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="LockReset" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Margin="10,0"
                                     materialDesign:HintAssist.Hint="Новый пароль (мин. 8 символов)"
                                     materialDesign:HintAssist.HelperText="Смесь букв, цифр и символов"
                                     Foreground="White" 
                                     Width="300" 
                                     BorderBrush="#2D3748"
                                     CaretBrush="#0EA5E9"
                                     Background="Transparent"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"/>
                    </StackPanel>

                    <!-- Подтверждение пароля -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,25">
                        <materialDesign:PackIcon Kind="LockCheck" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtRePassword" 
                                     Margin="10,0"
                                     materialDesign:HintAssist.Hint="Повторите новый пароль"
                                     Foreground="White" 
                                     Width="300" 
                                     BorderBrush="#2D3748"
                                     CaretBrush="#0EA5E9"
                                     Background="Transparent"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"/>
                    </StackPanel>

                    <!-- Кнопка смены пароля -->
                    <Button x:Name="butResetPassword" 
                            Width="320" 
                            Height="45"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="#0EA5E9"
                            Foreground="White" 
                            Click="butResetPassword_Click"
                            Content="СМЕНИТЬ ПАРОЛЬ"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,0,0,15"/>

                    <!-- Кнопка отмены -->
                    <Button Width="320" 
                            Height="40"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="Transparent" 
                            Foreground="#0EA5E9" 
                            x:Name="butExit" 
                            Click="butExit_Click"
                            Content="← ОТМЕНА"
                            FontSize="14"
                            Margin="0 0 0 10"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>