<Window x:Class="Amur_store.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Amur Store - Авторизация" 
        Height="450" Width="800" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ThreeDBorderWindow">

    <Grid x:Name="SignInGrid">
        <!-- Основной фон с градиентом -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF1E3A8A" Offset="0"/>
                <!-- Синий Amur -->
                <GradientStop Color="#FF0EA5E9" Offset="1"/>
                <!-- Голубой Amur -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Верхняя декоративная панель -->
        <Border Height="420" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#100E17"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Левая панель с логотипом -->
            <StackPanel Width="350" Margin="20,0">
                <Image Source="/Resources/Themes/logo_blue.png" Width="280" Height="280"
                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Stretch="Uniform"/>
                <TextBlock Text="AMUR STORE" 
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
                <TextBlock Text="Электроника и комплектующие" 
                           Foreground="#A0D1FF" 
                           FontSize="14"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           />
            </StackPanel>

            <!-- Правая панель с формой входа -->
            <StackPanel Width="350" Margin="0,0, 100, 0">
                <StackPanel Margin="20" Background="#101828" >
                    <TextBlock Text="ВХОД В СИСТЕМУ" 
                               Margin="0,0,0,25" 
                               Foreground="White" 
                               TextAlignment="Center" 
                               FontSize="26" 
                               FontWeight="SemiBold"/>

                    <!-- Поле для Email/Логина -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="Email" Width="22" Height="22" Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtInput"
                                 Margin="10,0" 
                                 materialDesign:HintAssist.Hint="Email или логин"
                                 Foreground="White" 
                                 Width="250" 
                                 BorderBrush="#2D3748"
                                 CaretBrush="#0EA5E9"
                                 Background="Transparent"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    </StackPanel>

                    <!-- Поле для пароля -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="Lock" Width="22" Height="22" Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Margin="10,0"
                                     materialDesign:HintAssist.Hint="Пароль"
                                     Foreground="White" 
                                     Width="250" 
                                     BorderBrush="#2D3748"
                                     CaretBrush="#0EA5E9"
                                     Background="Transparent"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"/>
                    </StackPanel>

                    <!-- Ссылка "Забыли пароль?" -->
                    <Button Width="130" 
                            Height="35" 
                            Style="{StaticResource MaterialDesignToolButton}"
                            Foreground="#A0D1FF" 
                            x:Name="butRePass" 
                            Click="butRePass_Click"
                            Content="Забыли пароль?"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <!-- Кнопка входа -->
                    <Button Width="280" 
                            Height="45"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="#0EA5E9" 
                            Foreground="White" 
                            x:Name="butLogin" 
                            Click="butLogin_Click"
                            Content="ВОЙТИ"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"/>

                    <!-- Кнопка регистрации -->
                    <Button Width="280" 
                            Height="45"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="Transparent" 
                            Foreground="#0EA5E9" 
                            x:Name="butSingUp" 
                            Click="butSingUp_Click"
                            Content="СОЗДАТЬ АККАУНТ"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,0,0,10"/>
                    <Button Content="Вход для сотрудников"
                            Click="GoToEmployeeLogin_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="#507090"
                            FontSize="12"
                            Margin="0,10,0,0"
                            Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Панель CAPTCHA (оставлена без изменений, но можно стилизовать под новый дизайн) -->
        <Grid x:Name="CaptchaPanel" Visibility="Collapsed" Background="#CC000000">
            <Border Background="#101828" 
                    CornerRadius="10" 
                    BorderBrush="#0EA5E9"
                    BorderThickness="2"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Padding="30">
                <StackPanel>
                    <TextBlock Text="Подтвердите, что вы не робот:"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,0,20"/>

                    <TextBlock x:Name="CaptchaLabel" 
                               Text="ABCDE" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"
                               Foreground="#0EA5E9"
                               Background="#1E293B"
                               Padding="20,10"
                               Width="200"
                               TextAlignment="Center"/>

                    <TextBox x:Name="CaptchaTextBox" 
                             Width="200" 
                             Height="40"
                             HorizontalAlignment="Center"
                             FontSize="16"
                             materialDesign:HintAssist.Hint="Введите код"
                             Foreground="White"
                             Background="Transparent"
                             BorderBrush="#2D3748"
                             CaretBrush="#0EA5E9"
                             materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"
                             Margin="0,0,0,20"/>

                    <Button Content="ПОДТВЕРДИТЬ" 
                            Click="Button_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="#0EA5E9"
                            Foreground="White"
                            Width="200"
                            Height="40"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>