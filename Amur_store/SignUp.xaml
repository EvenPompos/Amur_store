<Window x:Class="Amur_store.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Amur Store - Регистрация" 
        Height="500" Width="900" 
        WindowStartupLocation="CenterScreen" 
WindowStyle="ThreeDBorderWindow">

    <Grid x:Name="SignUpGrid">
        <!-- Основной фон с градиентом -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF1E3A8A" Offset="0"/>
                <GradientStop Color="#FF0EA5E9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Верхняя декоративная панель -->
        <Border Height="450" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#100E17"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Левая панель с изображением -->
            <StackPanel Width="350">
                <Image Source="/Resources/Themes/logo_blue.png" Width="320" Height="320"
                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Stretch="Uniform"/>
                <TextBlock Text="Присоединяйтесь!" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"/>
                <TextBlock Text="Покупайте электронику с выгодой" 
                           Foreground="#A0D1FF" 
                           FontSize="14"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           />
            </StackPanel>

            <!-- Правая панель с формой регистрации -->
            <StackPanel Width="400" Margin="20,0">
                <StackPanel Margin="20" Background="#101828">
                    <TextBlock Text="СОЗДАНИЕ АККАУНТА" 
                               Margin="0,0,0,25" 
                               Foreground="White" 
                               TextAlignment="Center" 
                               FontSize="26" 
                               FontWeight="SemiBold"/>

                    <!-- Поле логина -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="Account" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtLogin"
                                 Margin="10,0" 
                                 materialDesign:HintAssist.Hint="Придумайте логин"
                                 Foreground="White" 
                                 Width="300" 
                                 BorderBrush="#2D3748"
                                 CaretBrush="#0EA5E9"
                                 Background="Transparent"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    </StackPanel>

                    <!-- Поле email -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="Email" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <TextBox x:Name="txtEmail"
                                 Margin="10,0" 
                                 materialDesign:HintAssist.Hint="Ваш email"
                                 Foreground="White" 
                                 Width="300" 
                                 BorderBrush="#2D3748"
                                 CaretBrush="#0EA5E9"
                                 Background="Transparent"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    </StackPanel>

                    <!-- Поле пароля -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="Lock" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Margin="10,0"
                                     materialDesign:HintAssist.Hint="Пароль (мин. 8 символов)"
                                     materialDesign:HintAssist.HelperText="Смесь букв, цифр и символов"
                                     Foreground="White" 
                                     Width="300" 
                                     BorderBrush="#2D3748"
                                     CaretBrush="#0EA5E9"
                                     Background="Transparent"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"/>
                    </StackPanel>

                    <!-- Подтверждение пароля -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,25">
                        <materialDesign:PackIcon Kind="LockCheck" Width="22" Height="22" 
                                                  Foreground="#0EA5E9" VerticalAlignment="Center"/>
                        <PasswordBox x:Name="txtRePassword" 
                                     Margin="10,0"
                                     materialDesign:HintAssist.Hint="Повторите пароль"
                                     Foreground="White" 
                                     Width="300" 
                                     BorderBrush="#2D3748"
                                     CaretBrush="#0EA5E9"
                                     Background="Transparent"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#0EA5E9"/>
                    </StackPanel>

                    <!-- Кнопка регистрации -->
                    <Button Width="320" 
                            Height="45"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="#0EA5E9" 
                            Foreground="White" 
                            x:Name="butSignUp" 
                            Click="butSignUp_Click"
                            Content="СОЗДАТЬ АККАУНТ"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="0,0,0,15"/>

                    <!-- Кнопка возврата к входу -->
                    <Button Width="320" 
                            Height="40"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            BorderBrush="#0EA5E9" 
                            BorderThickness="2" 
                            Background="Transparent" 
                            Foreground="#0EA5E9" 
                            x:Name="butExit" 
                            Click="butExit_Click"
                            Content="← ВЕРНУТЬСЯ К ВХОДУ"
                            FontSize="14"
                            Margin="0 0 0 10"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>