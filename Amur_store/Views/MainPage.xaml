<Page x:Class="Amur_store.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Главная - Amur Store"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF0A2463" Offset="0" />
                <GradientStop Color="#FF1E3A8A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Верхняя панель -->
        <Border Height="500" VerticalAlignment="Top" CornerRadius="0 0 120 0" Background="#100E17" Opacity="0.9"/>

        <!-- Логотип и название -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="AMUR STORE" Foreground="White" FontSize="48" FontFamily="Segoe UI" FontWeight="Bold" />
                <TextBlock Text="Магазин компьютерной техники" Foreground="#A0B3E0" FontSize="18" FontFamily="Segoe UI" Margin="15 0 0 0"/>
            </StackPanel>
        </StackPanel>

        <!-- Рекомендуемые товары -->
        <StackPanel Margin="40,90,40,40">
            <TextBlock Text="Рекомендуемые товары" Foreground="White" FontSize="32" FontWeight="Bold" 
                       FontFamily="Segoe UI" HorizontalAlignment="Center"/>

            <!-- Контейнер для карточек товаров -->
            <ItemsControl x:Name="RandomProductsContainer" Margin="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="320" Height="270" Background="#1A2030" CornerRadius="12" 
                                Margin="15" BorderBrush="#2A3348" BorderThickness="1">
                            <StackPanel>
                                <!-- Изображение товара -->
                                <Border Height="125" CornerRadius="12,12,0,0" Background="#0F1524">
                                    <Image Source="{Binding ImagePath}" Stretch="Uniform" Margin="20"/>
                                </Border>

                                <!-- Информация о товаре -->
                                <StackPanel Margin="15" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding Name}" Foreground="White" 
                                               FontSize="16" FontWeight="SemiBold" 
                                               TextWrapping="Wrap" MaxHeight="60"
                                               Margin="0,0,0,10"/>

                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:N0} руб.'}" 
                                               Foreground="#4ADE80" FontSize="18" 
                                               FontWeight="Bold" Margin="0,0,0,15"/>

                                    <!-- Кнопка подробнее -->
                                    <Button Content="Подробнее" Background="#3B82F6" 
                                            Foreground="White" BorderThickness="0"
                                            Height="36" FontSize="14" FontWeight="Medium"
                                            Cursor="Hand" Tag="{Binding Id}"
                                            Click="ProductDetails_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="8" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                  VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2563EB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопка для обновления рекомендаций -->
            <Button x:Name="RefreshButton" Content="Обновить рекомендации" 
                    HorizontalAlignment="Center"
                    Background="Transparent" BorderBrush="#3B82F6" BorderThickness="2"
                    Foreground="#3B82F6" Height="40" Width="200" FontSize="14"
                    Click="RefreshButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E3A8A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Нижняя панель с контактами -->
        
    </Grid>
</Page>