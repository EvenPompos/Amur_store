<Page x:Class="Amur_store.Views.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мои заказы"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF0A2463" Offset="0" />
                <GradientStop Color="#FF1E3A8A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border Height="150" VerticalAlignment="Top" CornerRadius="0 0 120 0" Background="#100E17" Opacity="0.9"/>

        <StackPanel Margin="40,40,40,0" VerticalAlignment="Top">
            <TextBlock Text="Мои заказы" FontSize="36" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="OrdersInfoText" Text="Заказы" FontSize="16" Foreground="#A0B3E0" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Background="#1A2030" CornerRadius="12" Margin="40,130,40,40" BorderBrush="#2A3348" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
                    <TextBlock Text="Статус:" Foreground="#A0B3E0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="StatusFilterComboBox" Width="200" Height="30"
                              SelectionChanged="StatusFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все" Tag="0"/>
                        <ComboBoxItem Content="Оформлен" Tag="1"/>
                        <ComboBoxItem Content="В пути" Tag="2"/>
                        <ComboBoxItem Content="Доставлен" Tag="3"/>
                        <ComboBoxItem Content="Отменен" Tag="4"/>
                    </ComboBox>

                    <DatePicker x:Name="StartDatePicker" Width="120" Height="30" Margin="20,0,5,0"/>
                    <DatePicker x:Name="EndDatePicker" Width="120" Height="30" Margin="5,0,0,0"/>

                    <Button x:Name="ApplyFilterButton" Content="Применить" 
                            Background="#3B82F6" Foreground="White"
                            Height="30" Width="100" Margin="20,0,10,0"
                            Click="ApplyFilterButton_Click"/>
                    <Button x:Name="ResetFilterButton" Content="Сбросить" 
                            Background="#6B7280" Foreground="White"
                            Height="30" Width="100"
                            Click="ResetFilterButton_Click"/>
                </StackPanel>

                <DataGrid x:Name="OrdersDataGrid" Grid.Row="1" Margin="20,0,20,20"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" BorderBrush="#2A3348"
                          RowBackground="#1A2030" AlternatingRowBackground="#151A28"
                          Foreground="White" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding OrderID}" Width="50"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat={}{0:N0} р.}" Width="90"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding OrderStatus.OrderStatusName}" Width="100"/>
                        <DataGridTextColumn Header="Оплата" Binding="{Binding PaymentType.PaymentTypeName}" Width="100"/>
                        <DataGridTemplateColumn Header="Детали" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Просмотр" Tag="{Binding OrderID}" Click="ViewDetailsButton_Click"
                                            Background="#3B82F6" Foreground="White" Width="80" Height="25"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Панель деталей -->
        <Border x:Name="OrderDetailsPanel" Background="#151A28" CornerRadius="8" Margin="200,150,200,40"
                BorderBrush="#2A3348" BorderThickness="1" Padding="20" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="Заказ №" Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="SelectedOrderNumber" Foreground="#FBBF24" FontSize="16" FontWeight="Bold" Margin="5,0,0,0"/>
                    <Button Content="✕" Click="CloseDetailsButton_Click" Background="Transparent" Foreground="#A0B3E0"
                            BorderThickness="0" Width="30" Height="30" HorizontalAlignment="Right"/>
                </StackPanel>

                <DataGrid x:Name="OrderDetailsDataGrid" Grid.Row="1" Margin="0,15,0,0"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" BorderBrush="#2A3348"
                          RowBackground="#151A28" AlternatingRowBackground="#1A2030"
                          Foreground="White" IsReadOnly="True" MaxHeight="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Товар" Binding="{Binding Product.ProductName}" Width="250"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding UnitPrice, StringFormat={}{0:N0} р.}" Width="90"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Subtotal, StringFormat={}{0:N0} р.}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Товары:" Foreground="#A0B3E0" Width="150"/>
                        <TextBlock x:Name="ItemsTotalText" Foreground="White" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Доставка:" Foreground="#A0B3E0" Width="150"/>
                        <TextBlock x:Name="DeliveryCostText" Foreground="White" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Скидка:" Foreground="#A0B3E0" Width="150"/>
                        <TextBlock x:Name="DiscountText" Foreground="#4ADE80" HorizontalAlignment="Right"/>
                    </StackPanel>
                    <Separator Background="#2A3348" Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Итого:" Foreground="#A0B3E0" FontWeight="Bold" Width="150"/>
                        <TextBlock x:Name="FinalAmountText" Foreground="#FBBF24" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>