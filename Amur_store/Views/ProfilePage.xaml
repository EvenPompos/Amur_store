<Page x:Class="Amur_store.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Профиль"
      Loaded="Page_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF0A2463" Offset="0" />
                <GradientStop Color="#FF1E3A8A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border Height="475" VerticalAlignment="Top" CornerRadius="0 0 120 0" Background="#100E17" Opacity="0.9"/>

        <StackPanel Margin="40,40,40,0" VerticalAlignment="Top">
            <TextBlock Text="Личный кабинет" FontSize="36" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="WelcomeText" Text="Загрузка..." FontSize="18" Foreground="#A0B3E0" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Background="#1A2030" CornerRadius="12" Margin="40,130,40,20" BorderBrush="#2A3348" BorderThickness="1">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="CaretBrush" Value="White"/>
                        <Setter Property="Background" Value="#252A40"/>
                        <Setter Property="BorderBrush" Value="#4B5563"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Margin" Value="0,0,0,15"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#A0B3E0"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="0,0,10,15"/>
                    </Style>
                </Grid.Resources>

                <TextBlock Text="Логин:" Grid.Row="0"/>
                <TextBlock x:Name="txtLogin" Grid.Column="1" Grid.Row="0" Foreground="White" Margin="0,0,0,0"/>
                <TextBox x:Name="edLogin" Grid.Column="1" Grid.Row="0" Visibility="Collapsed" Padding="10 0 0 0"/>

                <TextBlock Text="Email:" Grid.Row="1"/>
                <TextBlock x:Name="txtEmail" Grid.Column="1" Grid.Row="1" Foreground="White" Margin="0,0,0,15"/>
                <TextBox x:Name="edEmail" Grid.Column="1" Grid.Row="1" Visibility="Collapsed"  Padding="10 0 0 0"/>

                <TextBlock Text="Телефон:" Grid.Row="2"/>
                <TextBlock x:Name="txtPhone" Grid.Column="1" Grid.Row="2" Foreground="White" Margin="0,0,0,15"/>
                <TextBox x:Name="edPhone" Grid.Column="1" Grid.Row="2" Visibility="Collapsed"  Padding="10 0 0 0"/>

                <TextBlock Text="Адрес:" Grid.Row="3"/>
                <TextBlock x:Name="txtAddress" Grid.Column="1" Grid.Row="3" Foreground="White" Margin="0,0,0,15" TextWrapping="Wrap"/>
                <TextBox x:Name="edAddress" Grid.Column="1" Grid.Row="3" Visibility="Collapsed" Padding="10 0 0 0"/>

                <TextBlock Text="Имя:" Grid.Column="3" Grid.Row="0"/>
                <TextBlock x:Name="txtName" Grid.Column="4" Grid.Row="0" Foreground="White" Margin="0,0,0,15"/>
                <TextBox x:Name="edName" Grid.Column="4" Grid.Row="0" Visibility="Collapsed"  Padding="10 0 0 0"/>

                <TextBlock Text="Фамилия:" Grid.Column="3" Grid.Row="1"/>
                <TextBlock x:Name="txtSurname" Grid.Column="4" Grid.Row="1" Foreground="White" Margin="0,0,0,15"/>
                <TextBox x:Name="edSurname" Grid.Column="4" Grid.Row="1" Visibility="Collapsed" Padding="10 0 0 0"/>

                <TextBlock Text="Отчество:" Grid.Column="3" Grid.Row="2"/>
                <TextBlock x:Name="txtPatronymic" Grid.Column="4" Grid.Row="2" Foreground="White" Margin="0,0,0,15"/>
                <TextBox x:Name="edPatronymic" Grid.Column="4" Grid.Row="2" Visibility="Collapsed" Padding="10 0 0 0"/>

                <TextBlock Text="Действия:" Grid.Row="5" FontWeight="Bold" Margin="0,20,0,0"/>
                <Button x:Name="ViewOrdersButton" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="4"
                        Content="Посмотреть мои заказы" HorizontalAlignment="Left"
                        Background="#3B82F6" Foreground="White" Height="36" Margin="0,20,0,0"
                        Click="ViewOrdersButton_Click"/>

                <StackPanel Grid.Row="6" Grid.ColumnSpan="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="butEdit" Content="Редактировать профиль" 
                            Background="#3B82F6" Foreground="White" Width="200" Height="40"
                            Click="butEdit_Click"/>

                    <Button x:Name="butSave" Content="Сохранить" 
                            Background="#10B981" Foreground="White" Width="150" Height="40" Margin="0,0,10,0"
                            Visibility="Collapsed" Click="butSave_Click"/>

                    <Button x:Name="butCancel" Content="Отмена" 
                            Background="#6B7280" Foreground="White" Width="120" Height="40"
                            Visibility="Collapsed" Click="butCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>