<Page x:Class="Amur_store.Views.WorkOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Управление заказами"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF0A2463" Offset="0" />
                <GradientStop Color="#FF1E3A8A" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border Height="150" VerticalAlignment="Top" CornerRadius="0 0 120 0" Background="#100E17" Opacity="0.9"/>

        <StackPanel Margin="40,40,40,0" VerticalAlignment="Top">
            <TextBlock Text="Управление заказами" FontSize="36" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Рабочий стол сотрудника" FontSize="16" Foreground="#A0B3E0" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Background="#1A2030" CornerRadius="12" Margin="40,130,40,40" BorderBrush="#2A3348" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,20,20,10">
                    <TextBlock Text="Фильтр по статусу:" Foreground="#A0B3E0" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <ComboBox x:Name="FilterStatusBox" Width="200" Height="30" SelectionChanged="FilterStatusBox_SelectionChanged">
                        <ComboBoxItem Content="Все заказы" Tag="0" IsSelected="True"/>
                        <ComboBoxItem Content="Новые" Tag="1"/>
                        <ComboBoxItem Content="В работе" Tag="2"/>
                        <ComboBoxItem Content="Выполнены" Tag="3"/>
                    </ComboBox>

                    <Button Content="Обновить данные" Click="RefreshButton_Click"
                            Background="#3B82F6" Foreground="White"
                            Height="30" Margin="20,0,0,0" Width="160"/>
                </StackPanel>

                <DataGrid x:Name="OrdersGrid" Grid.Row="1" Margin="20,0,20,20"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" BorderBrush="#2A3348"
                          RowBackground="#1A2030" AlternatingRowBackground="#151A28"
                          Foreground="White" IsReadOnly="False"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#2A3348">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#A0B3E0"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" 
                                                 BorderBrush="{TemplateBinding BorderBrush}" 
                                                 BorderThickness="{TemplateBinding BorderThickness}" 
                                                 Background="{TemplateBinding Background}" 
                                                 SnapsToDevicePixels="True">
                                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding OrderID}" Width="60" IsReadOnly="True" FontWeight="Bold"/>

                        <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat='dd.MM.yyyy HH:mm'}" Width="140" IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="Клиент" Width="*" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Clients.Surname}" FontWeight="SemiBold" Foreground="White"/>
                                        <TextBlock Text="{Binding Clients.Name}" FontSize="12" Foreground="#9CA3AF"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Мастер" Binding="{Binding Employees.Surname}" Width="120" IsReadOnly="True" Foreground="#A0B3E0"/>

                        <DataGridTemplateColumn Header="Изменить статус" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.Statuses, RelativeSource={RelativeSource AncestorType=Page}}"
                                              DisplayMemberPath="OrderStatusName"
                                              SelectedValuePath="OrderStatusID"
                                              SelectedValue="{Binding OrderStatusID, UpdateSourceTrigger=PropertyChanged}"
                                              SelectionChanged="StatusComboBox_SelectionChanged"
                                              Background="#2A3348" Foreground="White" BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Сумма" Binding="{Binding FinalAmount, StringFormat={}{0:N0} ₽}" Width="120" IsReadOnly="True" FontWeight="Bold" Foreground="#4ADE80"/>

                        <DataGridTemplateColumn Header="Действия" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Детали" Click="ViewDetailsButton_Click"
                                            Background="#3B82F6" Foreground="White" 
                                            Height="25" FontSize="12"
                                            Tag="{Binding OrderID}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border x:Name="OrderDetailsPanel" Background="#151A28" CornerRadius="8" Margin="0"
                BorderBrush="#2A3348" BorderThickness="2" Padding="20" Visibility="Collapsed"
                VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="700" MinHeight="400">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Детали заказа №" Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock x:Name="SelectedOrderNumber" Text="000" Foreground="#FBBF24" FontSize="20" FontWeight="Bold" Margin="5,0,0,0"/>
                </StackPanel>

                <Button Content="ЗАКРЫТЬ" Click="CloseDetailsButton_Click" 
                        Grid.Row="0" HorizontalAlignment="Right"
                        Background="#EF4444" Foreground="White" Width="100" Height="30"/>

                <DataGrid x:Name="OrderDetailsDataGrid" Grid.Row="1" Margin="0,0,0,20"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" BorderBrush="#2A3348"
                          RowBackground="#1A2030" AlternatingRowBackground="#151A28"
                          Foreground="White" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Товар / Услуга" Binding="{Binding Products.ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Products.ProductCategory}" Width="120"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding UnitPrice, StringFormat={}{0:N0} ₽}" Width="100"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Subtotal, StringFormat={}{0:N0} ₽}" Width="100" FontWeight="Bold"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5" HorizontalAlignment="Right">
                        <TextBlock Text="Мастер:" Foreground="#A0B3E0" Margin="0,0,10,0"/>
                        <TextBlock x:Name="DetailMasterText" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Separator Background="#2A3348" Margin="0,10,0,10" Width="250"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="ИТОГО К ОПЛАТЕ:" Foreground="#FBBF24" FontWeight="Bold" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock x:Name="DetailTotalText" Text="0 ₽" Foreground="#FBBF24" FontWeight="Bold" FontSize="18"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>